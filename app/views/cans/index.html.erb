  <%= include_gon %>
<% unless current_user %> 
  <h1 class="text-center p-5">Welcome to LitterWalk</h1>
    <%= render 'users/login' %>
  <% else %>
    <h1 class="display-4 text-center m-5">Cans near you</h1>
  

    <% if flash[:success] %>
      <div class="notice"><%= flash[:success] %></div>
    <% else %>
      <div class="notice"><%= flash[:error] %></div>    
  <% end %>

  
<%= form_tag searched_path do%>
  <%=select_tag "search_term", options_for_select(['Trash', 'Recycling', 'Pet Waste', 'Organic', 'E-Waste'])%>
  <%= submit_tag "Search"%>
<% end %>




    <div id="map"></div>
   
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBwhVnvsCXhml1l6gb3-S9eTzLzSPG1gGg&callback=initMapp">
    </script>
<% end %>
